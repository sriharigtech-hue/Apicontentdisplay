<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="#E0E0E0" /> <!-- light gray -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD" /> <!-- gray border -->

    <!-- Optional padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
