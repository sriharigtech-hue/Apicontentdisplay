<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white">

    <!-- Search Bar -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchSubCategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:hint="Search Sub-Category"
        android:iconifiedByDefault="false"
        android:background="@drawable/search_button_bg"
        android:paddingHorizontal="8dp" />

    <!-- Sequence Arrangement Button -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnSequenceArrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient_btn"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/font_semibold"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="Arrange Sub-Categories"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- RecyclerView for SubCategory List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSubCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- Floating Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddSubCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="@color/colorAccent" />

</LinearLayout>
